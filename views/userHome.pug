extends layout

block content
  div.wrapper
    //- side bar
    nav(id="sidebar")
      div.sidebar-header
        h3 Bootstrap Sidebar
      
      ul.list-unstyled.components
        p Dummy Heading
        li.active
          a(href="#homeSubmenu" data-toggle="collapse" aria-expanded="false").dropdown-toggle Home
          ul.collapse.list-unstyled(id="homeSubmenu")
            li
              a(href="#") Home 1
            li
              a(href="#") Home 2
            li
              a(href="#") Home 3
        li
          a(href="#") About
        li
          a(href="#pageSubmenu" data-toggle="collapse" aria-expanded="false").dropdown-toggle Pages
          ul.collapse.list-unstyled(id="pageSubmenu")
            li
              a(href="#") Page 1
            li
              a(href="#") Page 2
            li
              a(href="#") Page 3
        li
          a(href="#") Portfolio
        li
          a(href="#") Contact

    //- page content
    div(id="content")
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        div.container-fluid
          button(type="button" id="sidebarCollapse").btn.btn-info
                i.fas.fa-align-left
                span Toggle Sidebar

  script.
    $(document).ready(function () {

    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
    });

    });
      //- div.container
        h1.display-4 Welcome back.

  