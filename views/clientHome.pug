extends layout

block content
  
  //- sidebar.pug
  include sidebar
  
  //- Body
  div.container.w3-animate-opacity

    //- Check for alerts
    if doAlert
      include alert

    h1.display-3.tocapitalize.nooverflow= message
    a.btn.btn-primary(type='button' role='button' href="/userHome") 
      i.fa.fa-home
        span.fa-icon-text  Home

    //- Show Client form info
    include clientForm

append foot
  script.
    var str = !{JSON.stringify(client)}
    addClientToForm(str)
